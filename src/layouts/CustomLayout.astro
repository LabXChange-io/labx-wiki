export function getSpecimenVariant(specimen: string): 
  | "default"
  | "destructive"
  | "pending"
  | "info"
  | "success"
  | "destructive-secondary"
  | "default-secondary"
  | "secondary"
  | "success-secondary"
  | "outline" {
  const lowerSpecimen = specimen.toLowerCase();

  if (lowerSpecimen.includes("blood")) {
    return "destructive-secondary";
  } else if (lowerSpecimen.includes("urine")) {
    return "pending";
  } else if (lowerSpecimen.includes("plasma")) {
    return "info";
  } else if (lowerSpecimen.includes("serum")) {
    return "success";
  } else if (lowerSpecimen.includes("stool")) {
    return "default-secondary";
  } else if (lowerSpecimen.includes("swab")) {
    return "secondary";
  } else if (lowerSpecimen.includes("fluid")) {
    return "info";
  } else {
    return "default";
  }
}

